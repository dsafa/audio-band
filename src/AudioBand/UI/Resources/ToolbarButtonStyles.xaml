    <Duration x:Key="ButtonAnimationDuration">0:0:0.1</Duration>
    <DataTemplate x:Key="ToolbarButtonContentImageTemplate" DataType="audioband:ButtonContentViewModel">
        <Viewbox Margin="1" RenderOptions.BitmapScalingMode="Fant">
            <Image x:Name="Image">
                <Image.Source>
                    <MultiBinding Converter="{x:Static audioband:MultiConverters.PathToImageSource}">
                        <Binding Path="ImagePath" />
                        <Binding Path="(audioband:Fallback.FallbackImageSource)" RelativeSource="{RelativeSource AncestorType={x:Type Button}}" />
                    </MultiBinding>
                </Image.Source>
            </Image>
        </Viewbox>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=IsMouseOver}" Value="True">
                <Setter TargetName="Image" Property="Source">
                    <Setter.Value>
                        <MultiBinding Converter="{x:Static audioband:MultiConverters.PathToImageSource}">
                            <Binding Path="HoveredImagePath" />
                            <Binding Path="(audioband:Fallback.FallbackImageSource)" RelativeSource="{RelativeSource AncestorType={x:Type Button}}" />
                        </MultiBinding>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=IsPressed}" Value="True">
                <Setter TargetName="Image" Property="Source">
                    <Setter.Value>
                        <MultiBinding Converter="{x:Static audioband:MultiConverters.PathToImageSource}">
                            <Binding Path="ClickedImagePath" />
                            <Binding Path="(audioband:Fallback.FallbackImageSource)" RelativeSource="{RelativeSource AncestorType={x:Type Button}}" />
                        </MultiBinding>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>
    <DataTemplate x:Key="ToolbarButtonContentTextTemplate" DataType="audioband:ButtonContentViewModel">
        <Viewbox>
            <TextBlock x:Name="Text"
                       FontFamily="{Binding FontFamily}"
                       FontSize="72"
                       Foreground="{Binding TextColor, Converter={x:Static audioband:Converters.ColorToBrush}}"
                       Text="{Binding Text}" />
        </Viewbox>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=IsMouseOver}" Value="True">
                <Setter TargetName="Text" Property="Foreground" Value="{Binding HoveredTextColor, Converter={x:Static audioband:Converters.ColorToBrush}}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}}, Path=IsPressed}" Value="True">
                <Setter TargetName="Text" Property="Foreground" Value="{Binding ClickedTextColor, Converter={x:Static audioband:Converters.ColorToBrush}}" />
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>
    <ControlTemplate x:Key="ToolbarButtonControlTemplate" TargetType="{x:Type Button}">
        <Grid>
            <Border x:Name="ButtonBackground" Background="{Binding BackgroundColor, Converter={x:Static audioband:Converters.ColorToBrush}}" />
            <ContentPresenter x:Name="ButtonContent"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              Content="{TemplateBinding Content}" />
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="ButtonBackground" Property="Background" Value="{Binding HoveredBackgroundColor, Converter={x:Static audioband:Converters.ColorToBrush}}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter TargetName="ButtonBackground" Property="Background" Value="{Binding ClickedBackgroundColor, Converter={x:Static audioband:Converters.ColorToBrush}}" />
            </Trigger>
            <DataTrigger Binding="{Binding ElementName=ButtonContent, Path=Content.(audioband:ButtonContentViewModel.ContentType)}" Value="{x:Static models:ButtonContentType.Text}">
                <Setter TargetName="ButtonContent" Property="ContentTemplate" Value="{StaticResource ToolbarButtonContentTextTemplate}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding ElementName=ButtonContent, Path=Content.(audioband:ButtonContentViewModel.ContentType)}" Value="{x:Static models:ButtonContentType.Image}">
                <Setter TargetName="ButtonContent" Property="ContentTemplate" Value="{StaticResource ToolbarButtonContentImageTemplate}" />
            </DataTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!--  Button styles  -->
    <Style x:Key="ToolbarPlayPauseButtonStyle" TargetType="{x:Type Button}">
        <d:Style.DataContext>
            <x:Type Type="audioband:PlayPauseButtonViewModel" />
        </d:Style.DataContext>
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template" Value="{StaticResource ToolbarButtonControlTemplate}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsPlayButtonShown}" Value="True">
                <Setter Property="Content" Value="{Binding PlayContent}" />
                <Setter Property="audioband:Fallback.FallbackImageSource" Value="{StaticResource PlayButtonDefault}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding IsPlayButtonShown}" Value="False">
                <Setter Property="Content" Value="{Binding PauseContent}" />
                <Setter Property="audioband:Fallback.FallbackImageSource" Value="{StaticResource PauseButtonDefault}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="ToolbarNextButtonStyle" TargetType="{x:Type Button}">
        <d:Style.DataContext>
            <x:Type Type="audioband:NextButtonViewModel" />
        </d:Style.DataContext>
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="audioband:Fallback.FallbackImageSource" Value="{StaticResource NextButtonDefault}" />
        <Setter Property="Template" Value="{StaticResource ToolbarButtonControlTemplate}" />
        <Setter Property="Content" Value="{Binding Content}" />
    </Style>
    <Style x:Key="ToolbarPreviousButtonStyle" TargetType="{x:Type Button}">
        <d:Style.DataContext>
            <x:Type Type="audioband:PreviousButtonViewModel" />
        </d:Style.DataContext>
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="audioband:Fallback.FallbackImageSource" Value="{StaticResource PreviousButtonDefault}" />
        <Setter Property="Template" Value="{StaticResource ToolbarButtonControlTemplate}" />
        <Setter Property="Content" Value="{Binding Content}" />
    </Style>
    <Style x:Key="ToolbarRepeatModeButtonStyle" TargetType="{x:Type Button}">
        <d:Style.DataContext>
            <x:Type Type="audioband:RepeatModeButtonViewModel" />
        </d:Style.DataContext>
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template" Value="{StaticResource ToolbarButtonControlTemplate}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding RepeatMode}" Value="{x:Static audioSource:RepeatMode.Off}">
                <Setter Property="Content" Value="{Binding RepeatOffContent}" />
                <Setter Property="audioband:Fallback.FallbackImageSource" Value="{StaticResource RepeatOffDefault}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding RepeatMode}" Value="{x:Static audioSource:RepeatMode.RepeatContext}">
                <Setter Property="Content" Value="{Binding RepeatContextContent}" />
                <Setter Property="audioband:Fallback.FallbackImageSource" Value="{StaticResource RepeatContextDefault}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding RepeatMode}" Value="{x:Static audioSource:RepeatMode.RepeatTrack}">
                <Setter Property="Content" Value="{Binding RepeatTrackContent}" />
                <Setter Property="audioband:Fallback.FallbackImageSource" Value="{StaticResource RepeatOneDefault}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="ToolbarShuffleModeButtonStyle" TargetType="{x:Type Button}">
        <d:Style.DataContext>
            <x:Type Type="audioband:ShuffleModeButtonViewModel" />
        </d:Style.DataContext>
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template" Value="{StaticResource ToolbarButtonControlTemplate}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsShuffleOn}" Value="True">
                <Setter Property="Content" Value="{Binding ShuffleOnContent}" />
                <Setter Property="audioband:Fallback.FallbackImageSource" Value="{StaticResource ShuffleOnDefault}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding IsShuffleOn}" Value="False">
                <Setter Property="Content" Value="{Binding ShuffleOffContent}" />
                <Setter Property="audioband:Fallback.FallbackImageSource" Value="{StaticResource ShuffleOffDefault}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>